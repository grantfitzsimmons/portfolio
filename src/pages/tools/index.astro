---
import PageLayout from '@/layouts/BaseLayout.astro'
import ToolSection from '@/components/ToolSection.astro'
import Button from '@/components/Button.astro'

const DESIGN = [
	{
		name: 'Figma',
		description: 'Design Tool',
		href: 'https://www.figma.com/',
		iconPath: 'figma',
		iconBgColour: '#000001'
	}
]

const PRODUCTIVITY = [
	{
		name: 'Arc',
		description: 'Browser',
		href: 'https://arc.net/',
		iconPath: 'arc',
		iconBgColour: '#414350'
	},
	{
		name: 'Raycast',
		description: 'Workflows & Commands',
		href: 'https://www.raycast.com/',
		iconPath: 'raycast',
		iconBgColour: '#EFEFEE'
	},
	{
		name: 'Slack',
		description: 'Work Messaging',
		href: 'https://slack.com/',
		iconPath: 'slack',
		iconBgColour: '#A18470'
	},
	{
		name: 'Excel',
		description: 'Spreadsheets',
		href: 'https://www.microsoft.com/en-us/microsoft-365/excel',
		iconPath: '/images/excel.png',
		iconBgColour: '#227445'
	}
]

const DEVELOPMENT = [
	{
		name: 'VS Code',
		description: 'IDE',
		href: 'https://code.visualstudio.com/',
		iconPath: 'vscode',
		iconBgColour: '#2C2C32'
	},
	{
		name: 'BBEdit',
		description: 'Plain Text Editor',
		href: 'https://www.barebones.com/products/bbedit/',
		iconPath: '/images/bbedit.png',
		iconBgColour: '#807DC0'
	},
	{
		name: 'DBeaver',
		description: 'Database Manager',
		href: 'https://dbeaver.io/',
		iconPath: 'dbeaver',
		iconBgColour: '#A18470'
	},
	{
		name: 'OpenRefine',
		description: 'Data Cleaning',
		href: 'https://openrefine.org/',
		iconPath: '/images/openrefine.png',
		iconBgColour: '#08A0FF'
	}
]

---

<PageLayout meta={{ title: 'Home' }}>
	<div class='w-full'>
		<Button title='Back' href='/' style='button'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='14'
				height='14'
				viewBox='0 0 24 24'
				slot='icon-before'
			>
				<path
					fill='currentColor'
					d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
				>
				</path>
			</svg>
		</Button>

		<div class='mt-5 flex w-full flex-col gap-y-10'>
			<div>
				<h1 class='mb-1 text-2xl font-bold'>Tools</h1>
				<p>Tools and software I use daily</p>
			</div>

			<ToolSection title='Productivity' tools={PRODUCTIVITY} />
			<ToolSection title='Development' tools={DEVELOPMENT} />
			<ToolSection title='Design' tools={DESIGN} />
		</div>
	</div>
</PageLayout>
